
@model sachem.Models.Groupe

@{
    ViewBag.Title = "Supprimer groupe";
}

<h2>@ViewBag.Title</h2>

<h3>@sachem.Models.Messages.VraimentSupprimerGroupe(Model.NoGroupe)</h3>
<div>
    <h4>Groupe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NoGroupe)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoGroupe)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cours.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cours.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Personne.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Personne.PrenomNom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Session.NomSession)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Session.NomSession)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        
            if ((string)ViewBag.Error != null)
            {
                @ViewBag.Error;
            }

        

        <div class="form-actions no-color">
             <input type="submit" value="Supprimer" class="btn btn-default"/>
            @Html.ActionLink("Annuler", "Index", null, null, new { @class = "btn btn-default" })
        </div>
    }
</div>
