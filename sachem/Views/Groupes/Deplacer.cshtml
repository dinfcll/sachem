@model sachem.Models.GroupeEtudiant

@{
    ViewBag.Title = "Déplacer groupe";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Déplacer un élève</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.Personne.Nom, null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.DisplayFor(model => model.Personne.NomPrenom)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Groupe.NoGroupe, null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.DisplayFor(model => model.Groupe.NoGroupe)
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Groupe.NoGroupe, "Groupe cible", htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.DropDownList("id_groupedepl", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_GroupeEtudiant, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="hidden" display="none;" name="idGroupeEtudiant" value="@Model.id_GroupeEtudiant"> 

       <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Déplacer vers ce groupe" class="btn btn-default" /> 
            </div>
       </div>
        <div>
            @Html.ActionLink("Retour à la modification du groupe", "Edit", new { id = Model.Groupe.id_Groupe })
        </div>
    }
</div>
