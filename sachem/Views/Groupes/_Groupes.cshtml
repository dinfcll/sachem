@using sachem.Models
@model Groupe

<div class="form-group">
    @Html.LabelFor(model => model.NoGroupe, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.NoGroupe, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NoGroupe, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.id_Sess, "Session", new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("id_Sess", null, Messages.VeuillezChoisir, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.id_Sess, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.id_Enseignant, "Enseignant", new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @(ViewBag.Disabled == "" ? Html.DropDownList("id_Enseignant", null, Messages.VeuillezChoisir, new {@class = "form-control"}) : Html.DropDownList("id_Enseignant", null, Messages.VeuillezChoisir, new {@class = "form-control", disabled = ViewBag.Disabled}))
        @Html.ValidationMessageFor(model => model.id_Enseignant, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.id_Cours, "Cours", new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("id_Cours", null, Messages.VeuillezChoisir, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.id_Cours, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="@Messages.Enregistrer" class="btn btn-default" />
        @if (Request.UrlReferrer != null)
        {
            @(Request.UrlReferrer.ToString().Contains("ConsulterCours/Details") ? Html.ActionLink(Messages.Annuler, "Details", "ConsulterCours", new {idCours = Model.Cours.id_Cours, idSess = Model.id_Sess}, new {@class = "btn btn-default"}) : Html.ActionLink(Messages.Annuler, "Index", null, null, new {@class = "btn btn-default"}))
        }
    </div>
</div>
