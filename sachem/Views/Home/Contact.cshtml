@using sachem.Models
@model p_Contact
@{
    ViewBag.Title = Messages.ContacterTitre;
}
<h2>@ViewBag.Title</h2>       

    <dl class="dl-horizontal">

        <dt>
            @Messages.ContacterPersonneRessource:
        </dt>
        <dd>@Html.DisplayFor(model => model.Prenom) @Html.DisplayFor(model => model.Nom)</dd>

        <dt>
            @Html.LabelFor(model => model.Telephone):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Telephone)
            @if (Model.Poste != null)
            {
                <span>#</span>@Html.DisplayFor(model => model.Poste)
            }
        </dd>
        <dt>
            @Html.LabelFor(model => model.Local):
        </dt>
        <dd>@Html.DisplayFor(model => model.Local)</dd>
    <dd>
        <a href="@Model.Facebook" title="@Messages.ContacterFacebook" target="_blank">
            <img src="~/Images/facebook.png" width="40" height="40" alt="Facebook"/></a>
        <a href="@Model.SiteWeb" title="@Messages.ContacterSiteWeb" target="_blank">
            <img src="~/Images/www.png" width="40" height="40" alt="Site web"/></a>
    </dd>
    </dl>
