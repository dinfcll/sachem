@model sachem.Models.Personne

@{
    ViewBag.Title = "Edit";
}

<h2>Modifier Enseignant</h2>
@{
    ViewBag.Title = "Modifier Enseignant";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_Pers)
        @Html.Partial("_Enseignant")
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Accèder aux groupes de l'enseignant" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la recherche des enseignants", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
