@model sachem.Models.Personne


@{
    ViewBag.Title = "Modifier Enseignant";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Enseignant", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_Pers)
        @Html.Partial("_Enseignant")
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                
                <input type="button" value="Accéder aux groupes de l'enseignant" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Groupes", new { id = Model.id_Pers})'"/>
                
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la recherche des enseignants", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
