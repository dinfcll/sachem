@using sachem.Models
@model Tuple<List<SelectListItem>, p_HoraireInscription>

@{
    ViewBag.Title = "Modification de l'horaire";
}

<h2>Modifier l'horaire d'ouverture d'inscription au SACHEM</h2>

<p class="text-success">
    @Html.ViewBag.Success
    @TempData["Success"]
</p>
@using (Html.BeginForm("EditHoraire", "Parametres", FormMethod.Post , new{ nouvelHoraire = Model.Item2}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m =>m.Item2.Session)
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Item2.id_Sess, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.ListBoxFor(model => model.Item2.id_Sess, Model.Item1, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownList("Session", "Toutes")
                @*@Html.ValidationMessageFor(model => model.Item1, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item2.DateDebut, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item2.DateDebut, new { htmlAttributes = new { @class = "form-control", @placeholder = "AAAA/MM/JJ", Value = "" } })
                @Html.ValidationMessageFor(model => model.Item2.DateDebut, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item2.DateFin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item2.DateFin, new { htmlAttributes = new { @class = "form-control", @placeholder = "AAAA/MM/JJ", Value = "" } })
                @Html.ValidationMessageFor(model => model.Item2.DateFin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item2.HeureDebut, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item2.HeureDebut, new { htmlAttributes = new { @class = "form-control" , @placeholder = "hh:mm", Value = "" } })
                @Html.ValidationMessageFor(model => model.Item2.HeureDebut, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item2.HeureFin, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item2.HeureFin, new { htmlAttributes = new { @class = "form-control", @placeholder = "hh:mm", Value = "" } })
                @Html.ValidationMessageFor(model => model.Item2.HeureFin, "", new { @class = "text-danger" })
            </div>
        </div>
        
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
