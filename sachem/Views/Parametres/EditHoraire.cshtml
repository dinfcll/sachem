@model Tuple<sachem.Models.p_HoraireInscription,sachem.Models.Session,sachem.Models.p_Saison>

@{
    ViewBag.Title = "Modification de l'horaire";
}

<h2>Modifier l'horaire d'ouverture d'inscription au SACHEM</h2>

<p class="text-success">
    @Html.ViewBag.Success
    @TempData["Success"]
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Item1.id_Sess, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item1.id_Sess, new { htmlAttributes = new { @class = "form-control" , @Value = Model.Item4[0]} })
                @Html.ValidationMessageFor(model => model.Item1.id_Sess, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item1.DateDebut, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item1.DateDebut, new { htmlAttributes = new { @class = "form-control", @placeholder = "AAAA/MM/JJ", @Value = Model.Item1.DateDebut.Date.ToString("yyyy/MM/dd") } })
                @Html.ValidationMessageFor(model => model.Item1.DateDebut, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item1.DateFin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item1.DateFin, new { htmlAttributes = new { @class = "form-control", @placeholder = "AAAA/MM/JJ", @Value = Model.Item1.DateFin.Date.ToString("yyyy/MM/dd") } })
                @Html.ValidationMessageFor(model => model.Item1.DateFin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item1.HeureDebut, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item1.HeureDebut, new { htmlAttributes = new { @class = "form-control" , @placeholder = "hh:mm", @Value = Model.Item1.HeureDebut.ToString(@"hh\:mm") } })
                @Html.ValidationMessageFor(model => model.Item1.HeureDebut, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item1.HeureFin, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item1.HeureFin, new { htmlAttributes = new { @class = "form-control", @placeholder = "hh:mm", @Value = Model.Item1.HeureFin.ToString(@"hh\:mm") } })
                @Html.ValidationMessageFor(model => model.Item1.HeureFin, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
