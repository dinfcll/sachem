
@model sachem.Models.p_HoraireInscription

@{
    ViewBag.Title = "Modification de l'horaire";
}

<h2>Modifier l'horaire d'ouverture d'inscription au SACHEM</h2>

<p class="text-success">
    @Html.ViewBag.Success
    @TempData["Success"]
</p>
@using (Html.BeginForm("EditHoraire", "Parametres", FormMethod.Post , new { @class = "form-block", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.id_Sess, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_Sess", null, null, htmlAttributes: new { @class = "form-search" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateDebut, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (1 == ViewBag.idSessHoraire)
                {
                    @Html.EditorFor(model => model.DateDebut, new { htmlAttributes = new { @class = "form-control", @placeholder = "AAAA/MM/JJ" } })
                    @Html.ValidationMessageFor(model => model.DateDebut, "", new { @class = "text-danger" })
                }
                else
                {
                    @Html.DisplayFor(model => model.DateDebut, new { htmlAttributes = new { @class = "form-control"} })
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateFin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (1 == ViewBag.idSessHoraire)
                {
                    @Html.EditorFor(model => model.DateFin, new { htmlAttributes = new { @class = "form-control", @placeholder = "AAAA/MM/JJ"} })
                    @Html.ValidationMessageFor(model => model.DateFin, "", new { @class = "text-danger" })
                }
                else
                {
                    @Html.DisplayFor(model => model.DateFin, new { htmlAttributes = new { @class = "form-control" } })
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HeureDebut, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (1 == ViewBag.idSessHoraire)
                {
                    @Html.EditorFor(model => model.HeureDebut, new { htmlAttributes = new { @class = "form-control" , @placeholder = "hh:mm" } })
                    @Html.ValidationMessageFor(model => model.HeureDebut, "", new { @class = "text-danger" })
                }
                else
                {
                @Html.DisplayFor(model => model.HeureDebut, new { htmlAttributes = new { @class = "form-control" } })
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HeureFin, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @if (1 == ViewBag.idSessHoraire)
                {
                    @Html.EditorFor(model => model.HeureFin, new { htmlAttributes = new { @class = "form-control", @placeholder = "hh:mm" } })
                    @Html.ValidationMessageFor(model => model.HeureFin, "", new { @class = "text-danger" })
                }
                else
                {
                    @Html.DisplayFor(model => model.HeureFin, new { htmlAttributes = new { @class = "form-control" } })
                }
            </div>
        </div>
        @if (1 == ViewBag.idSessHoraire)
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enregistrer" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
