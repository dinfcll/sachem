@using sachem.Models
@model IEnumerable<Inscription>

@{
    ViewBag.Title = Messages.Inscription;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "RechercheInscription", FormMethod.Post, new { @class = "form-inline", role = "form" }))
{
    <h4>Recherche</h4>
    <table class="table-condensed">
        <tr>
            <td>@Messages.Session:</td>
            <td>@Html.DropDownList("Session", null, Messages.Toutes, new { @class = "form-search" })</td>
            <td>@Html.LabelFor(model => model.First().p_TypeInscription.TypeInscription):</td>
            <td>@Html.DropDownList("TypeInscription", null, Messages.Tous, new { @class = "form-search" })</td>
            <td>@Html.DisplayNameFor(model => model.First().p_StatutInscription.Statut)):</td>
            <td>@Html.DropDownList("Statut", null, Messages.Tous, new { @class = "form-search" })</td>
            <td><input type="submit" value="@Messages.Rechercher" class="form-search" /></td>
        </tr>
    </table>
}

<table class="table">
    <tr>
        <th  class="col-sm-5">
            @Html.DisplayNameFor(model => model.Personne.NomPrenom)
        </th>
        <th class="col-sm-2">
            @Html.DisplayNameFor(model => model.Personne.Matricule7)
        </th>
        <th class="col-sm-1">
            @Html.DisplayNameFor(model => model.p_StatutInscription.Statut)
        </th>
        <th class="col-sm-2">
            @Html.DisplayNameFor(model => model.p_TypeInscription.TypeInscription)
        </th>

        <th class="col-sm-2"></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Personne.NomPrenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personne.Matricule7)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.p_StatutInscription.Statut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.p_TypeInscription.TypeInscription)
            </td>

            <td>
                @Html.ActionLink(Messages.Consulter, "Details", new {id = item.id_Inscription})
            </td>
        </tr>
    }
    @if (!Model.Any())
    {
        <tr>
            <td colspan="6">@Messages.AucunInscription</td>
        </tr>
    }
</table>
