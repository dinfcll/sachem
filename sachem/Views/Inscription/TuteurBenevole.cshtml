@using sachem.Models
@model Cours
@{
    ViewBag.Title = Messages.Inscription;
}
<div style="margin-right:15%">
    <h2>@ViewBag.Title</h2>
    <h4>@Messages.TuteurBenevole / @Messages.TuteurRemunere</h4>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h3 style="background-color:aliceblue">@Messages.Disponibilites</h3>
        <div class="row rowCourseReussisPadTop">
            <div class="col-md-8"><h5 class="hIns">@Messages.InscriptionCombienHeuresPretADonner</h5></div>
            <div class="col-md-4">
                <select style="width: 300px; float: right;" class="form-search ins-select">
                    <option value="1.5"></option>
                    <option value="3"></option>
                    <option value="4.5"></option>
                    <option value="6"></option>
                    <option value="*"></option>
                </select>
            </div>
        </div>

        @Html.Partial("_CoursReussis")
    }
</div>

<div>
    @Html.ActionLink(Messages.RetourEnArriere, "Index")
</div>
