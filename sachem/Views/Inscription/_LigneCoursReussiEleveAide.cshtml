<div class="clearfix rowCourseReussisPadTop InfoCourCollege">
    <br />
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-addon basic-addon1">Cours</span>
                @Html.DropDownList("lstCours", null, "Aucun cours suivi au Cégep", new { @class = "form-search ins-selectcours valLignecours dropDownCours" })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-addon basic-addon2">Statut</span>
                @Html.DropDownList("lstStatut", null, new { @class = "form-search ins-selectcollege valLignecours dropDownStatut" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-addon basic-addon1">Session</span>
                @Html.DropDownList("slSession", null, new { @class = "form-search ins-selectcollege valLignecours dropDownSess" })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-addon basic-addon2">Résultat</span>
                <input type="text" class="form-control text-box single-line ins-text-box valLignecours" placeholder="Résultat" />
            </div>
        </div>
    </div>
    <span class="input-group-btn"><input type="button" span="6" value="Supprimer" style="float:right" class="btn btn-default btnSupprimerCours" /></span>
</div>
