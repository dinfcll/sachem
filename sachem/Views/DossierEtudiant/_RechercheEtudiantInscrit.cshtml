@using sachem.Methodes_Communes
@using sachem.Models
<h4>@Messages.Recherche</h4>

<div class="recherche">
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-4 recherche-label">
                @Messages.Session
            </div>
            <div class="col-md-8 recherche-field">
                @Html.DropDownList("Session", null, Messages.Toutes, new { @class = "form-control" })
            </div>
        </div>
    @if (SachemIdentite.ObtenirTypeUsager(Session) == TypeUsager.Enseignant || SachemIdentite.ObtenirTypeUsager(Session) == TypeUsager.Responsable || SachemIdentite.ObtenirTypeUsager(Session) == TypeUsager.Super)
    {
        <div class="col-md-4">
            <div class="col-md-4 recherche-label">
                @Messages.TypeInscription
            </div>
            <div class="col-md-8 recherche-field">
                @Html.DropDownList("Inscription", null, Messages.Tous, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">

            <div class="col-md-4 recherche-label">
                @Messages.Superviseur
            </div>
            <div class="col-md-8 recherche-field">
                @Html.DropDownList("Superviseur", null, Messages.Tous, new { @class = "form-control" })
            </div>

        </div>
    }
    else
    {
        <div class="col-md-4">
            <div class="col-md-4 recherche-label">
                @Messages.TypeInscription
            </div>
            <div class="col-md-8 recherche-field" style="padding-right: 20px;">
                @Html.DropDownList("Inscription", null, Messages.Tous, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
    }
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-4 recherche-label">
                @Messages.NoDa
            </div>
            <div class="col-md-8 recherche-field">
                @Html.Editor("Matricule", new { htmlAttributes = new { @class = "form-control", maxlength = "7" } })
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-4 recherche-label">
                @Messages.Prenom
            </div>
            <div class="col-md-8 recherche-field">
                @Html.Editor("Prenom", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-4 recherche-label">
                @Messages.Nom
            </div>
            <div class="col-md-8 recherche-field">
                @Html.Editor("Nom", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <button type="submit" class="btn btn-default" style="margin-top: 5px; margin-bottom: 10px;">
                <i class="material-icons">search</i>@Messages.Rechercher
            </button>
        </div>
    </div>
</div>
