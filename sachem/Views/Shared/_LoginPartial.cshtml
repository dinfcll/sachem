@using sachem.Methodes_Communes
@using sachem.Models
@if (BrowserSessionBag.Current.NomComplet !=null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
       
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-user"></span>
                    <span class="nomUtilisateurNav">@Session["NomComplet"]</span>
                    <b class="caret">
                    </b>
                </a>

                <ul class="dropdown-menu">
                    <li>
                        <a href="@Url.Action("ModifierPassword", "Account")">
                            <span class="glyphicon glyphicon-cog"></span><span>&nbsp; @Messages.ModifierMotPasse</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("LogOff", "Account")">
                            <span class="glyphicon glyphicon-log-out"></span><span>&nbsp; @Messages.Deconnexion</span>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li>
        <a href="@Url.Action("Register", "Account")">
            <span class="glyphicon glyphicon-user"></span><span>&nbsp; @Messages.Sinscrire</span>
        </a>
    </li>
    <li>
        <a href="@Url.Action("Login", "Account")">
            <span class="glyphicon glyphicon-log-in"></span><span>&nbsp; @Messages.SeConnecter</span>
        </a>
    </li>
</ul>
}
