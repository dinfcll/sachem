@using sachem.Methodes_Communes
@using sachem.Models
@if (BrowserSessionBag.Current.NomComplet !=null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
       
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="material-icons">person</i><span class="nomUtilisateurNav">@Session["NomComplet"]</span>
                    <b class="caret"></b>
                </a>

                <ul class="dropdown-menu">
                    <li>
                        <a href="@Url.Action("ModifierPassword", "Account")">
                            <i class="material-icons">lock_open</i><span>@Messages.ModifierMotPasse</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("LogOff", "Account")">
                            <i class="material-icons">input</i><span>@Messages.Deconnexion</span>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li>
        <a href="@Url.Action("Register", "Account")">
            <i class="material-icons">person</i><span>@Messages.Sinscrire</span>
        </a>
    </li>
    <li>
        <a href="@Url.Action("Login", "Account")">
            <i class="material-icons">input</i><span>@Messages.SeConnecter</span>
        </a>
    </li>
</ul>
}
