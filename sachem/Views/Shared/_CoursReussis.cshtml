<p>
    <h5 class="hIns">
        Indiquez tous les cours de mathématiques(collégial) que vous avez suivis et réussis
        ainsi que le cégep où ces cours ont eu lieu :
    </h5>
</p>

<div id="espaceCours">
</div>

<div style="padding-bottom:10px">
    <input type="button" value="Ajouter un cours" class="btn btn-default ins-btnAjouter" id="btnAjouterCours" /><br /><br />
    <input type="button" value="Enregistrer et poursuivre" class="btn btn-default" />
    <input type="button" value="Enregistrer un brouillon" class="btn btn-default" />
    <input type="button" value="Annuler" class="btn btn-default" />
</div>


<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        
        supprimerLigneCours = function (btnClique) {
            alert();
        }

        ajouterLigneCours = function () {
            $.ajax({
                url: "/Inscription/getLigneCours",
                type: "POST",
                success: function (donnees) {
                    $("#espaceCours").append(donnees);

                    $(".btnSupprimerCours").click(function () {
                        $(this).parent().parent().remove();
                    });
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $("#espaceCours").append(errorThrown);
                }
            });
        }

        ajouterLigneCours();

        $("#btnAjouterCours").click(function () {
            ajouterLigneCours();
        });
        
        

    });
</script>






