@using sachem.Models
<div class="clearfix rowCourseReussisPadTop InfoCourCollege">
    <div class="col-md-9">
        <div class="row ins-row">
            <div class="col-md-2">
                @Messages.Cours:
            </div>
            <div class="col-md-6">
                @Html.DropDownList("lstCours", null, Messages.VeuillezChoisir, new { @class = "form-search ins-selectcours valLignecours dropDownCours" })
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control text-box single-line ins-text-box valLignecours result" /><span style="float:right">%</span>               
            </div>
        </div>
        <div class="row ins-row">
            <div class="col-md-2">
                @Messages.Autre:
            </div>
            <div class="col-md-6">
                <input id ="autreCours" type="text" class="form-control text-box single-line ins-text-box valLignecours coursChange"/>
            </div>
        </div>
        <div class="row ins-row">
            <div class="col-md-2">
                @Messages.College:
            </div>
            <div class="col-md-6">
                @Html.DropDownList("lstCollege", null, Messages.VeuillezChoisir, new { @class = "form-search ins-selectcollege valLignecours dropDownCollege" })
            </div>
        </div>
        <div class="row ins-row">
            <div class="col-md-2">
                @Messages.Autre:
            </div>
            <div class="col-md-6">
                <input id ="autreCollege" type="text" class="form-control text-box single-line ins-text-box valLignecours collegeChange"/>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <input type="button" value="@Messages.Supprimer" style="float:right" class="btn btn-default btnSupprimerCours" />
    </div>
</div>
