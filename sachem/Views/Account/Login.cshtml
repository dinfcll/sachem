@using sachem.Models
@model Personne
@{
    ViewBag.Title = Messages.Connexion;
}

<h2>@ViewBag.Title</h2>

<p class="text-success">
    @Html.ViewBag.Success
    @Html.Raw(TempData["Success"])
</p>
<div class="col-md-12 row">
    <h4>@Messages.AccountLoginUtiliserCompteConnexion</h4>
    <hr /> 
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-6">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NomUsager, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.NomUsager, new { htmlAttributes = new { @class = "form-control", maxlength = "25" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MP, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    <div>
                        @Html.EditorFor(model => model.MP, new { htmlAttributes = new { @class = "form-control", type = "password", id = "input-pswd" } })
                        @Html.ActionLink("?", "ForgotPassword", null, new { @class = "btn-default btn", id = "login-btn-forgottenpswd" })
                    </div>
                    @Html.ValidationMessageFor(model => model.MP, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.SouvenirConnexion)
                        @Html.LabelFor(m => m.SouvenirConnexion)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="@Messages.Connexion" class="btn btn-default" style="width:100%;" />
                    <div style="margin-top:15px;margin-left:5px;">@Messages.AccountLoginPasDeCompte @Html.ActionLink(Messages.InscrivezVous, "Register")</div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h3>Étudiants</h3>
            <p>@Messages.AccountLoginConnexionEtudiantRestriction</p>
            <h3>Enseignants</h3>
            <p>@Messages.AccountLoginConnexionEnseignantRestriction</p>
        </div>
    }
</div>
