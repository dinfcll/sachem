@using sachem.Models
@model Personne

@{
    ViewBag.Title = Messages.AccountRegisterTitre;
}

<h2>@ViewBag.Title</h2>

<p class="text-success">
    @Html.ViewBag.Success
</p>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Matricule7, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Matricule7, new { htmlAttributes = new { @class = "form-control", maxlength = "7" } })
            @Html.ValidationMessageFor(model => model.Matricule7, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateNais, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateNais, $"{0:yyyy\\/MM\\/dd}", new { htmlAttributes = new { @class = "form-control", placeholder = Messages.PlaceHolderDate, required = "required", title = Messages.ChampRequis } })
            @Html.ValidationMessageFor(model => model.DateNais, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.id_Sexe, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("id_Sexe", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_Sexe, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Courriel, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Courriel, new { htmlAttributes = new { @class = "form-control", maxlength = "256", required = "required", title = Messages.ChampRequis } })
            @Html.ValidationMessageFor(model => model.Courriel, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Telephone, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control", placeholder = Messages.PlaceHolderTelephone,maxlength = "14", required = "required", title = Messages.ChampRequis } })
            @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MP, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MP, new { htmlAttributes = new { @class = "form-control", type = "password", minlength = "6", title = Messages.LongueurDeSixCarateres } })
            @Html.ValidationMessageFor(model => model.MP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", type = "password"} })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@Messages.Sinscrire"/>
            @Html.ActionLink(Messages.Annuler, "Login", null, null, new { @class = "btn btn-default" })
        </div>
    </div>
}
